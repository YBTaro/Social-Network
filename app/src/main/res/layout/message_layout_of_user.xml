<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:layout_marginVertical="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_layout_imgView_profile"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/message_layout_txt_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/message_layout_imgView_profile"
        android:background="@drawable/receiver_text_message_background"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="reciever message"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/message_layout_txt_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/sender_text_message_background"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="sender message"
        android:textColor="#000000"/>


</RelativeLayout>