<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp"
    android:id="@+id/find_friends_card"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#E4058ECD">

        <RelativeLayout
            android:id="@+id/find_friends_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/card_profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/card_txt_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_profile_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="fullname"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/card_img_downArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/card_profile_img"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrow_down"
                android:layout_marginTop="25dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_corrupted_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_friends_layout"
            android:visibility="visible">

            <TextView
                android:id="@+id/card_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="status"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/card_img_upArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/card_txt_status"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrow_up" />

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>